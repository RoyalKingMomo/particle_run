<% include ./partials/header %>

    <!--Map Div-->
    <div id="map"></div>

    <div id="startStopDiv">
        <a onclick="start()" id="startandstopbtn" class="btn btn-success">Start</a>
        <script>
            function start() {
                var target = document.getElementById("startandstopbtn");
                target.textContent = "Stop";
                updateMan = setInterval(updatePath, 3000);
                toggleEventStream();        
                target.onclick = function onclick(event) {
                    stop()
                };
            }

            function stop() {
                clearInterval(updateMan);
                var target = document.getElementById("startandstopbtn");
                target.textContent = "Start";
                toggleEventStream();
                target.onclick = function onclick(event) {
                    start()
                };
            }

        </script>
        <!--change start for a runtimeVariable-->
    </div>

